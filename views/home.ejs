  <section id="main">
    <div class="left-col">
      <h1 class="title">Halo, silahkan masukan data baru di form berikut :</h1>
      <div class="form-container">
        <form action="/upload-csv" method="post" id="upload-data">
          <!-- <input type="file" id="fileInput" accept=".csv" />
                -->
          <label for="csv" class="drop-container" id="dropcontainer">
            <span class="drop-title">Drop file csv</span>
            Atau cari file :
            <div class="container">
              <input type="file" id="csv" accept=".csv" required>
              <input type="submit" value="Upload data">
            </div>
          </label>
        </form>
      </div>
      <h3 class="informasi-tambahan">
        Atau langsung masuk ke <a href="/dashboard" target="_blank" rel="noopener noreferrer">
          Dashboard
        </a>
      </h3>

    </div>
    <div class="right-col">
      <img loading="lazy"
        src="https://cdn.builder.io/api/v1/image/assets/TEMP/2e4a1382f3c792615ca1460c8407e557c9b54f588f4396603afdc8cb696070c2?"
