<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CSV File Upload</title>
</head>

<body>
    <h1>Upload CSV File</h1>
    <form id="csvForm">
        <label for="csvFile">Choose a CSV file:</label>
        <input type="file" id="csvFile" accept=".csv" required>
        <br>
        <button type="button" onclick="uploadCSV()">Upload</button>
    </form>

    <div id="result"></div>

    <script>
        async function uploadCSV() {
            const fileInput = document.getElementById('csvFile');
            const file = fileInput.files[0];

            if (!file) {
                alert('Please choose a CSV file.');
                return;
            }

            const formData = new FormData();
            formData.append('csvFile', file);

            try {
                const response = await fetch('/upload', {
                    method: 'POST',
                    body: formData,
                });

                if (response.ok) {
                    document.getElementById('result').innerText = 'CSV file processed and data inserted into MySQL tables.';
                } else {
                    document.getElementById('result').innerText = 'Error: ' + response.statusText;
                }
            } catch (error) {
                console.error('Error:', error);
                document.getElementById('result').innerText = 'Internal Server Error.';
            }
        }
    </script>
</body>

</html>