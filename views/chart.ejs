<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">
    <link rel="stylesheet" href="../css/Dashboard-styling.css">
    <title>Dynamic Charts</title>
</head>
<body>

<div class="chart-container">
    <h1><i class="fas fa-chart-bar"></i> Grafik Data</h1>

    <div class="chart-options">
        <div class="select-container">
            <label for="attributeSelect">Select Attribute:</label>
            <select id="attributeSelect">
                <!-- Options dynamically generated based on data columns -->
                <option value="attribute1">Attribute 1</option>
                <option value="attribute2">Attribute 2</option>
                <!-- Add more options as needed -->
            </select>
        </div>

        <button onclick="updateBarChart()"><i class="fas fa-chart-bar"></i> Update Bar Chart</button>
    </div>

    <div class="bar-chart" id="barChart">
        <!-- Bar chart will be dynamically generated here -->
        <canvas id="bChart"></canvas>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
          const ctx = document.getElementById('bChart');
        
          new Chart(ctx, {
            type: 'bar',
            data: {
              labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
              datasets: [{
                label: '# of Votes',
                data: [12, 19, 3, 5, 2, 3],
                borderWidth: 1
              }]
            },
            options: {
              scales: {
                y: {
                  beginAtZero: true
                }
              }
            }
          });
        </script>
    </div>

    <div class="select-container">
        <label for="numericSelect1">Select Numeric Attribute 1:</label>
        <select id="numericSelect1">
            <!-- Options dynamically generated based on numeric columns -->
            <option value="numeric1">Numeric 1</option>
            <option value="numeric2">Numeric 2</option>
            <!-- Add more options as needed -->
        </select>
    </div>

    <div class="select-container">
        <label for="numericSelect2">Select Numeric Attribute 2:</label>
        <select id="numericSelect2">
            <!-- Options dynamically generated based on numeric columns -->
            <option value="numeric1">Numeric 1</option>
            <option value="numeric2">Numeric 2</option>
            <!-- Add more options as needed -->
        </select>
    </div>

    <button onclick="updateScatterPlot()"><i class="fas fa-chart-scatter"></i> Update Scatter Plot</button>

    <div class="scatter-plot" id="scatterPlot">
        <!-- Scatter plot will be dynamically generated here -->
        <canvas id="sChart"></canvas>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
          const ctx2 = document.getElementById('sChart');
        
          new Chart(ctx2, {
            type: 'scatter',
            data: {
            datasets: [{
                label: 'Scatter Dataset',
                data: [{
                    x: -10,
                    y: 0
                }, {
                    x: 0,
                    y: 10
                }, {
                    x: 10,
                    y: 5
                }, {
                    x: 0.5,
                    y: 5.5
                }],
                backgroundColor: 'rgb(255, 99, 132)'
            }],
            },
            options: {
                scales: {
                    x: {
                        type: 'linear',
                        position: 'bottom'
                    }
                }
            }
          });
        </script>
    </div>
</div>

<script src="script.js"></script>
</body>
</html>
